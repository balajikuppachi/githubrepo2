<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false"
	xmlns:log4j='http://jakarta.apache.org/log4j/'>
 
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
	    <layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" 
		  value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
	    </layout>
	</appender>
	
	<appender name="WriteFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="append" value="true" />
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="${regapp.logs.location}/fileAdaptor-App.log" />
	    <layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" 
			value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
	    </layout>
	</appender>
	
	 <!-- additional fooSystem logging -->
    <appender name="FileFilter" class="org.apache.log4j.FileAppender">
      	<param name="append" value="true" />
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
        <param name="File" value="${regapp.logs.location}/fileAdaptor-App-Write.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </layout>
    </appender>
	
	
	 <logger name="com.wellsfargo.fileAdapter.FileFilter">
        <appender-ref ref="FileFilter"/>
    </logger>

    <logger name="com.wellsfargo.fileAdapter.WriteFile">
        <appender-ref ref="WriteFile"/>
    </logger>
 
	<root>
	<level value="INFO"/>
		<appender-ref ref="console" />
		<appender-ref ref="file" />
	</root>
</log4j:configuration>
